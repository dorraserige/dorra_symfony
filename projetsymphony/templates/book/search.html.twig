<!DOCTYPE html>
<html>
<head>
    <title>Recherche de Livre par Référence</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Rechercher un livre par référence</h1>
        
        <!-- Formulaire de recherche -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Recherche</h5>
            </div>
            <div class="card-body">
                <form method="get" action="{{ path('search_book') }}" class="row g-3">
                    <div class="col-md-8">
                        <label for="ref" class="form-label">Référence du livre</label>
                        <input type="text" 
                               name="ref" 
                               id="ref"
                               class="form-control" 
                               placeholder="Entrez la référence du livre..."
                               value="{{ searchRef ?? '' }}"
                               required>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Rechercher</button>
                        <a href="{{ path('list_books') }}" class="btn btn-secondary">Retour à la liste</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Résultats de la recherche -->
        {% if searchRef %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Résultats de la recherche pour "{{ searchRef }}"</h5>
                </div>
                <div class="card-body">
                    {% if book %}
                        <div class="row">
                            <div class="col-md-12">
                                <h4>{{ book.title }}</h4>
                                <table class="table table-bordered">
                                    <tr>
                                        <th width="30%">Référence:</th>
                                        <td>{{ book.ref }}</td>
                                    </tr>
                                    <tr>
                                        <th>Titre:</th>
                                        <td>{{ book.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Année de publication:</th>
                                        <td>{{ book.publicationYear }}</td>
                                    </tr>
                                    <tr>
                                        <th>Auteur:</th>
                                        <td>{{ book.author ? book.author.username : 'N/A' }}</td>
                                    </tr>
                                </table>
                                
                                <div class="mt-3">
                                    <a href="{{ path('showBook', {'id': book.id}) }}" class="btn btn-info">Voir détails</a>
                                    <a href="{{ path('updateBook', {'id': book.id}) }}" class="btn btn-warning">Modifier</a>
                                    <a href="{{ path('list_books') }}" class="btn btn-secondary">Retour à la liste</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">
                            <strong>Aucun livre trouvé</strong> avec la référence "{{ searchRef }}"
                        </div>
                        <a href="{{ path('list_books') }}" class="btn btn-primary">Voir tous les livres</a>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <strong>Information:</strong> Entrez une référence dans le champ de recherche ci-dessus.
            </div>
        {% endif %}
    </div>
</body>
</html>