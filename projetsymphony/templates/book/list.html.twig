<!DOCTYPE html>
<html>
<head>
    <title>Liste des Livres</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Liste des Livres</h1>
        
        <!-- Zone de recherche -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Rechercher un livre par référence</h5>
            </div>
            <div class="card-body">
                <form method="get" action="{{ path('list_books') }}" class="row g-3">
                    <div class="col-md-8">
                        <input type="text" 
                               name="ref" 
                               class="form-control" 
                               placeholder="Entrez la référence du livre..."
                               value="{{ searchRef ?? '' }}">
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                        <a href="{{ path('list_books') }}" class="btn btn-secondary">Reset</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tableau des livres -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Titre</th>
                    <th>Date de publication</th>
                    <th>Auteur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                <tr>
                    <td>{{ book.ref }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.publicationYear ? book.publicationYear|date('d/m/Y') : 'N/A' }}</td>
                    <td>{{ book.author ? book.author.username : 'N/A' }}</td>
                    <td>
                        <a href="{{ path('showBook', {'id': book.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('updateBook', {'id': book.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('deleteBook', {'id': book.id}) }}" class="btn btn-danger btn-sm" 
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?')">
                            Supprimer
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="text-center">
                        {% if searchRef %}
                            Aucun livre trouvé avec la référence "{{ searchRef }}"
                        {% else %}
                            Aucun livre trouvé
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('addForm') }}" class="btn btn-success">Ajouter un nouveau livre</a>
    </div>
</body>
</html>