{% extends 'base.html.twig' %}

{% block title %}Modifier l'auteur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier l'auteur</h1>
    
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.username) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.nb_books) }}
        </div>
        
        <button type="submit" class="btn btn-warning">Modifier l'auteur</button>
        <a href="{{ path('showAll') }}" class="btn btn-secondary">Annuler</a>
    {{ form_end(form) }}
</div>
{% endblock %}