<h1>Liste des auteurs</h1>

<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
    </tr>
    {% for author in list %}
        <tr>
            <td>{{ author.id }}</td>
            <td>{{ author.username }}</td>
            <td>{{ author.email }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Aucun auteur trouv√©.</td>
        </tr>
    {% endfor %}
</table>