<h1>Liste des auteurs</h1>

<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
    </tr>
    {% for author in list %}
        <tr>
            <td>{{ author.id }}</td>
            <td>{{ author.username }}</td>
            <td>{{ author.email }}</td>
            <td>
            <a href="{{path ('deleteAuthor',{'id':author.id})}}">Delete</a>
            <a href="{{path ('showDetails',{'id':author.id})}}">Show</a>
            <a href=""> Update </a>
            </td>
        
        </tr>
    {% endfor %}
</table>